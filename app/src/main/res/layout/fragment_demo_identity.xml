<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_centerVertical="true"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView_demoIdentityUserImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="90dp"
            android:layout_marginRight="90dp"
            android:scaleType="fitCenter"
            android:src="@mipmap/user" />

        <TextView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/textView_demoIdentityUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:contentDescription="@string/identity_demo_textview_username_description"
            android:gravity="center"
            android:text="@string/unknown_user"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/textView_demoIdentityUserIDLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="@string/user_id"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/textView_demoIdentityUserID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:contentDescription="@string/identity_demo_textview_userid_description"
            android:gravity="center"
            android:text="" />
    </LinearLayout>
</LinearLayout>
